<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Movie Reviews</title>
<link rel="stylesheet" href="/stylesheets/style.css" type="text/css" media="screen" title="no title" charset="utf-8">
</head>
<body>

<div id="container">
	<header class="header">
		<nav>
			<span class="login-status">
				{{#if user}}
				Logged in as: {{user.username}} <form method="POST" action="/logout" id="logout-form"> | <button id="logout-button">logout</button></form>
				{{else}}
				<a href="/register">Register</a> or <a href="/login">Login</a>
				{{/if}}
			</span>
		</nav>
		<div class="search-container">
		<form action="/">
			<h1 class="title">Movie Reviews</h1>
			<input class="search-input" type="text" placeholder="Search movies..." name="input">
			<button class="search-button" type="submit" id="search-button">Search</button>
		</form>
		</div>
	</header>
	<nav class="sidebar">
		<div class="sidebar-text">
			<a href="/" style="color:gainsboro;">All movies</a><br>
			<a href="/add" style="color:gainsboro;">Add a movie</a><br>
		</div>
	</nav>
	<div id="content" class="content">
		{{{ body }}}
	</div>
</div>
</body>
</html>